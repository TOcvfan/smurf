@model minSide.Models.GuestBook

@{
    ViewBag.Title = "Skriv nyt indlæg";
}

@Html.ValidationSummary(true)

<div class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row">
            <div class="col-md-3"> </div>
            <div class="col-md-6">
                <h1>Skriv i min gæstebog</h1>
                @using (Html.BeginForm()) {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                <form>
                    <div class="form-group">
                        <label for="InputName">Overskrift</label>
                        <br>@Html.EditorFor(model => model.Subject)
                        @Html.ValidationMessageFor(model => model.Subject)
                    </div>
                    <div class="form-group"> 
                    <label for="Textarea">Tekst</label> 
                        <br>@Html.EditorFor(model => model.Body)
                        @Html.ValidationMessageFor(model => model.Body) 
                    </div>
                    <button type="submit" class="btn btn-secondary">Submit</button>
                </form>
                }
            </div>
            <div class="col-md-3"> </div>
        </div>
    </div>
</div>
