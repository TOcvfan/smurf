@model IEnumerable<minSide.Models.GuestBook>

@{
    ViewBag.Title = "Gæstebog";
}

<div class="p-5 text-center bg-secondary text-white gradient-overlay">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="mb-4">Gæstebog</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div id="carouselArchitecture" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselArchitecture" data-slide-to="0" class="active"><i></i></li>
                        <li data-target="#carouselArchitecture" data-slide-to="1" class=""><i></i></li>
                        <li data-target="#carouselArchitecture" data-slide-to="2" class=""><i></i></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="~/Content/billeder/forside.PNG" data-holder-rendered="true">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="~/Content/billeder/cv.PNG" data-holder-rendered="true">
                        </div>
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="~/Content/billeder/cv2.PNG" data-holder-rendered="true">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<h1 class="text-white">Øvrige Indlæg | @Html.ActionLink("Skriv nyt indslag", "Create")</h1>
@foreach (var item in Model)
    {
        <div class="py-5 gradient-overlay text-center bg-secondary">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-12">
                                    <h2 class="text-light text-left">
                                    @item.Subject
                                </h2>
                            </div>
                            <div class="col-md-12">
                                <h5 class="text-light text-right">@Html.DisplayFor(modelItem => item.UserName) | 
                                @Html.DisplayNameFor(model => model.CreatedDate): @Html.DisplayFor(modelItem => item.CreatedDate)</h5>
                            </div>
                            <p class="text-light text-left">
                                @Html.DisplayFor(modelItem => item.Body)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
   


