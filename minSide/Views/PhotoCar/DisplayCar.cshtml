@model minSide.Models.Photo

@{
    ViewBag.Title = Model.Title;
}
<div class="py-5 gradient-overlay text-center bg-secondary">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="text-light">@Model.Title</h1>
                        <p class="text-light">
                            @Html.DisplayFor(model => model.Description)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <img class="img-fluid d-block w-100 mb-3 rounded" src="@Url.Action("GetImage", "Photo", new { id = Model.PhotoID })">
                <p class="text-white">
                    <div  class="text-light">
                        @Html.DisplayNameFor(model => model.UserName):
                        @Html.DisplayFor(model => model.UserName)
                    </div>
                    <div class="text-light text-left">
                        @Html.DisplayNameFor(model => model.CreatedDate):
                        @Html.DisplayFor(model => model.CreatedDate)
                    </div>
                </p>
            </div>
        </div>
    </div>
</div>