@model minSide.Models.User

@{
    ViewBag.Title = "Register";
}

<body class="bg-primary">
    <div class="py-5 bg-primary">
        <div class="container">
            <div class="row bg-primary">
                <div class="col-md-3"> </div>
                <div class="col-md-6">
                    <div class="card text-white p-5 bg-secondary">
                        <div class="card-body">
                            <h1 class="mb-4">Create User</h1>
                            <form action="https://formspree.io/YOUREMAILHERE">
                                <div class="form-group">
                                    <label class="form-control-label">First name</label>
                                    @Html.TextBoxFor(m => m.FName, new { @class = "text-box" })
                                </div>
                                <div class="form-group">
                                    <label>Last name</label>
                                    @Html.TextBoxFor(m => m.LName, new { @class = "text-box" })
                                </div>
                                <div class="btn-group">
                                    
                                        <select id="selectmenu">
                                            <option value="User">User</option>
                                            <option value="kaereste">Lover</option>
                                            <option value="Job" selected="selected">Job</option>
                                            <option value="Familie">Family</option>
                                            <option value="Ven">Friend</option>
                                        </select>
                                    
                                </div>
                                <div class="form-group">
                                    <label>Phone</label>
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "text-box" })
                                </div>
                                <div class="form-group">
                                    <label>Age</label>
                                    @Html.TextBoxFor(m => m.Age, new { @class = "text-box" })
                                </div>
                                <button type="submit" class="btn btn-success">Next</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
</body>

